<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cc.uah.es.todomanager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".TaskListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TaskDetailActivity"
            android:label="@string/title_task_detail"
            android:parentActivityName=".TaskListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cc.uah.es.todomanager.TaskListActivity" />
        </activity>
        <activity
            android:name=".NewTaskActivity"
            android:label="@string/title_activity_new_task"
            android:parentActivityName=".TaskListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cc.uah.es.todomanager.TaskListActivity" />
        </activity>

        <activity
            android:name=".EditTaskActivity"
            android:label="@string/title_activity_new_task"
            android:parentActivityName=".TaskDetailActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cc.uah.es.todomanager.TaskDetailActivity" />
        </activity>

    </application>

</manifest>