<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.uah.cc.todomanager.EditTask1Fragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="@string/task_name"
        android:labelFor="@+id/task_name"/>
    
    <EditText
        android:id="@+id/task_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:lines="1"
        android:singleLine="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/text_margin"
    android:text="@string/task_priority"
    android:labelFor="@+id/task_priority"/>

    <Spinner
        android:id="@+id/task_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="@string/task_description"
        android:labelFor="@+id/task_description"/>

    <EditText
        android:id="@+id/task_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:lines="4"
        android:singleLine="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <CheckBox
        android:id="@+id/task_is_complex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/task_is_complex"/>
        <CheckBox
            android:id="@+id/task_has_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/task_has_deadline"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/finish_button"
            style="@android:style/Widget.Material.Button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="@string/finish_button"
            android:textSize="12sp" />

        <Button
            android:id="@+id/next_button"
            style="@android:style/Widget.Material.Button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="@string/next_button"
            android:textSize="12sp" />

        <Button
            android:id="@+id/cancel_button"
            style="@android:style/Widget.Material.Button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="@string/cancel_button"
            android:textSize="12sp" />

    </LinearLayout>
    </LinearLayout>
